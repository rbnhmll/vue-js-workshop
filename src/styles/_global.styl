html
  font-size 62.5%
body
  font-size 1.6rem
  background url('./assets/what-the-hex.png'), $gradient
  background-blend-mode: multiply;
  min-height 100vh
  padding-top 60px
  @media screen and (max-width 480px)
    padding-top 20px
.wrapper
  max-width 800px
  width 95%
  margin 0 auto
  display grid
  grid-gap 20px
  &--mini
    max-width 550px
    margin 0 auto
.app
  font-family 'Avenir', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  color $dark-grey
a
  color lighten($dark-grey, 10)
  text-decoration none
  &:hover,
  &:focus,
  &:active
    text-decoration underline

a.btn,
.btn
  text-decoration none
  border 2px solid $dark-grey
  font-weight bold
  text-transform uppercase
  border-radius 3px
  padding 10px 40px
  background #fff
  color $dark-grey
  transition()

  &:hover, &:focus, &:active
    &:not(:disabled)
      box-shadow()
  &:disabled
    opacity 0.5

p
  line-height 1.5

body
  font-family 'Lato', sans-serif

h1, 
h2, 
h3, 
h4, 
h5, 
h6
  font-family 'Dosis', sans-serif
  letter-spacing 0.1em
  line-height 1.3

h1
  font-size 3em
  @media screen and (max-width 480px)
    font-size 2.4em

h2
  font-size 2.5em
  @media screen and (max-width 480px)
    font-size 2.1em

h3
  font-size 2em
  line-height 1.5

h4
  font-size 1.2em

h5
  font-size 1em

.h1
  @extend h1
.h2
  @extend h2
.h3
  @extend h3
.h4
  @extend h4
.h5
  @extend h5
.h6
  @extend h6

.standout
  padding-left: 1em
  border-left: 5px solid $green